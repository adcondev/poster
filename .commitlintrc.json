{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "scope-empty": [
      2,
      "never"
    ],
    "scope-enum": [
      2,
      "always",
      [
        "composer",
        "connection",
        "commands",
        "document",
        "graphics",
        "profile",
        "service",
        "barcode",
        "bitimage",
        "character",
        "linespacing",
        "mechanismcontrol",
        "print",
        "printposition",
        "qrcode",
        "common",
        "models",
        "github",
        "gomod",
        "npm",
        "gh-actions",
        "poster",
        "tables",
        "security",
        "miscellaneous",
        "executor",
        "builder",
        "constants",
        "emulator"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "deps"
      ]
    ],
    "subject-case": [
      2,
      "never",
      [
        "sentence-case",
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ],
    "subject-full-stop": [
      2,
      "never",
      "."
    ],
    "header-max-length": [
      2,
      "always",
      100
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ]
  },
  "helpUrl": "https://github.com/adcondev/poster/blob/main/.github/git-commit-instructions.md"
}